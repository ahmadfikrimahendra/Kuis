# Luas Persegi View
package Kuis_Panel;
import Kuis_Perhitungan.LuasPersegi;

public class Persegi extends javax.swing.JPanel {


    public Persegi() {
        initComponents();
    }
    
private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    LuasPersegi a = new LuasPersegi();
    int sisi = Integer.parseInt(jTextField1.getText());
    int hasil = a.luaspersegi(sisi);
    
    jLabel2.setText("Hasil ="+hasil);

    }                                        
